<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supplement.Add">






    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="7dp"
            android:src="@drawable/arrow_back" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="64dp"
            android:paddingTop="4dp"
            android:text="@string/macro_add_navigation"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="8dp"
            android:src="@drawable/home" />
    </RelativeLayout>

    <TableRow
        android:id="@+id/tble8"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/txtsupname"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:text="@string/txtViewFoodName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtsupname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/txtInFoodName"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tble6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tble8">

        <TextView
            android:id="@+id/txtsupprice"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:text="@string/txtFat"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtsupprice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tble3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tble6">

        <TextView
            android:id="@+id/txtsupdesc"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:text="@string/txtProtein"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtsupdesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp" />
    </TableRow>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:text="@string/btnAddMacros"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tble3" />



</androidx.constraintlayout.widget.ConstraintLayout>