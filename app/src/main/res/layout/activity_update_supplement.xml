<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supplement.UpdateSupplement">


    <TableRow
        android:id="@+id/tble8"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/txtsupname2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/txtsupname"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tble6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tble8">

        <TextView
            android:id="@+id/txtsupprice2"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:text="@string/txtsupprice"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/price_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tble3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tble6">

        <TextView
            android:id="@+id/txtsupdesc2"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:text="@string/txtsupdesc"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/description_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp" />
    </TableRow>

    <Button
    android:id="@+id/update_button"
    android:layout_width="140dp"
    android:layout_height="49dp"
    android:text="@string/update_button"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tble3" />


    <Button
        android:id="@+id/delete_button"

        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:text="@string/delete_button"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_button" />

</androidx.constraintlayout.widget.ConstraintLayout>